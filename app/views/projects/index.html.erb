    <main role="main">

    <%= link_to 'Sign In', new_user_session_url %>

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">My Work</h1>
          <p class="lead text-muted">A collection of projects I have worked on.</p>
          
          <a class="btn btn-primary my-2" <%= link_to 'New Project', new_project_path %></a>
          
          
          
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <% @projects.each do |project| %>
              <tr>
                <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <div class="card-body">
                    <p class="card-text">Title: <%= project.title %></p>
                    <p class="card-text">Description: <%= project.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <a type="button" class="btn btn-sm btn-outline-secondary" <%= link_to 'Show', project %></a>                    
                        <a type="button" class="btn btn-sm btn-outline-secondary"<%= link_to 'Edit', edit_project_path(project) %></a>
                        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-secondary" %>
                      </div>
                    </div>
                  </div>
                </div>
                </div>
              </tr>
            <% end %>      
          </div>
        </div>
      </div>

      <% if !current_user.present? %> 
      <a class="text-white"<%= link_to 'Sign In', new_user_session_url %></a><br>
      <a class="text-white"<%= link_to 'Sign Up', new_user_registration_url %></a><br>

      <% elsif current_user.present? %>
      <a class="text-white"<%= link_to 'Sign Out', destroy_user_session_url, :method => :delete %></a><br>
      <% end %>


