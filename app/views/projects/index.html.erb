<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Portfolio</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/album/">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="album.css" rel="stylesheet">
  </head>

  <body>

    <header>
      <div class="collapse bg-dark" id="navbarHeader">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-md-7 py-4">
              <h4 class="text-white">Donald Kim</h4>
              <p class="text-muted">Computer Science Major, Game Design Minor, Japanese Minor, Musician<br><br>
              Contact: <br>
              xcdgospel@gmail.com</p>
            </div>
            <div class="col-sm-4 offset-md-1 py-4">
              <h4 class="text-white">Navigation</h4>
                <ul class="list-unstyled">
                <a class="text-white"<%= link_to 'Home', Project %></a><br>

                <% if !current_user.present? %> 
                <a class="text-white"<%= link_to 'Sign In', new_user_session_url %></a><br>
                <a class="text-white"<%= link_to 'Sign Up', new_user_registration_url %></a><br>

                <% elsif current_user.present? %>
                <a class="text-white"<%= link_to 'Sign Out', destroy_user_session_url, :method => :delete %></a><br>
                <% end %>

              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="navbar navbar-dark bg-dark box-shadow">
        <div class="container d-flex justify-content-between">
          <a href="#" class="navbar-brand d-flex align-items-center">            
            <strong>Portfolio</strong>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </div>
    </header>

    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">My Work</h1>
          <p class="lead text-muted">A collection of projects I have/are working on.</p>
          <p>
          <%= link_to 'New Project', new_project_path, :class => "btn btn-primary my-2"  %>
            
          </p>
        </div>
      </section>
      
      <div class="album py-5 bg-light">
        <div class="container">        
          <div class="row">
            <% @projects.each do |project| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">                 
                <div class="card-body">
                  <p class="card-text">Title: <%= project.title %></p>
                  <p class="card-text">Description: <%= project.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to 'Show', project, :class => "btn btn-sm btn-outline-secondary"  %>                  
                      <%= link_to 'Edit', edit_project_path(project), :class => "btn btn-sm btn-outline-secondary" %>
                      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-secondary" %>
                    </div>
                  </div>
                </div>
              </div>  
            </div>
            <% end %> 
          </div>        
        </div>         
      </div> 
    </main>

    <footer class="text-muted">
      <div class="container">
        <p class="float-right">
          <a href="#">Back to top</a>
        </p>
        <p>&copy; Bootstrap</p>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="../../assets/js/vendor/popper.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <script src="../../assets/js/vendor/holder.min.js"></script>
  </body>
</html>










